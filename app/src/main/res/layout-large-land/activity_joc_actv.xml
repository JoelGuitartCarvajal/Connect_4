<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_weight="1"
        android:background="@color/blue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Connect4-Joc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragmentJoc"
            class="com.example.connect_4.Fragments.Grid_GameFragment"
            android:layout_width="871dp"
            android:layout_height="match_parent">

        </fragment>

        <fragment
            android:id="@+id/fragmentLogJoc"
            class="com.example.connect_4.Fragments.GameLogFragment"
            android:layout_width="836dp"
            android:layout_height="match_parent">

        </fragment>
    </LinearLayout>

</LinearLayout>